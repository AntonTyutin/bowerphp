{
    "name": "beelab/bowerphp",
    "description": "An implementation of bower in PHP",
    "keywords": ["package", "dependency", "frontend"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Massimiliano Arione",
            "email": "massimiliano.arione@bee-lab.net"
        },
        {
            "name": "Mauro D'Alatri",
            "email": "mauro.dalatri@bee-lab.net"
        }
    ],
    "support": {
        "issues": "https://github.com/bee-lab/bowserphp/issues"
    },
    "require": {
        "php": ">=5.3.2",
        "symfony/console": "~2.3",
        "symfony/finder": "~2.2",
        "symfony/process": "~2.1",
        "knplabs/gaufrette": "0.1.*",
        "doctrine/cache": "~1.3",
        "guzzle/guzzle": "3.8.*",
        "camspiers/json-pretty": "1.0.*"
    },
    "require-dev":{
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.8.*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Bee-Lab/Gaufrette"
        }
    ],
    "autoload": {
        "psr-0": { "Bowerphp": "src/" }
    },
    "bin": ["bin/bowerphp"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "bin-dir": "bin"
    }

}
